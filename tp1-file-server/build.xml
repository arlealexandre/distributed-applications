<project name="distributed-applications" basedir=".">

    <!-- Description -->
    <description>Distributed applications - Practical work</description>

    <!-- Properties -->
    <property name="src" location="src"/>
    <property name="build" location="build"/>

    <!-- Target: clean -->
    <target name="clean"> 
        <echo message="Cleaning ./build..."/>
        <delete dir="${build}"/>
    </target>

    <!-- Target: init -->
    <target name="init" depends="clean">
        <echo message="Creating ./build directory..."/> 
        <mkdir dir="${build}"/>
    </target>

    <!-- Target: compile -->
    <target name="compile" depends="init">
        <echo message="Compiling ./src directory..."/>
        <javac srcdir="${src}" destdir="${build}">
            <classpath>
                <pathelement location="${build}"/>
            </classpath>
        </javac>
    </target>

    <!-- Target: run tp1 Server -->
    <target name="server" depends="compile">
        <echo message="Running server program..."/>
        <java classname="Server" fork="true">
            <classpath>
                <pathelement location="${build}"/>
            </classpath>
        </java>
    </target>

    <!-- Target: run tp1 Client -->
    <target name="client" depends="compile">
        <echo message="Running client program..."/>
        <java classname="Client" fork="true">
            <classpath>
                <pathelement location="${build}"/>
            </classpath>
        </java>
    </target>

</project>